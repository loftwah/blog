---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import { faLink, faTerminal, faPeopleRobbery, faLock, faCloud, faIdCard } from '@fortawesome/free-solid-svg-icons';
import { faGithub, faXTwitter, faLinkedin, faAws } from '@fortawesome/free-brands-svg-icons';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-200">
    <Header />
    <main>
      <!-- Hero Section -->
      <div class="max-w-4xl mx-auto px-4 sm:px-6 py-12">
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden">
          <!-- Hero Banner -->
          <div class="relative h-48 sm:h-64 overflow-hidden">
            <img 
              src="/images/loftwah_banner.jpg" 
              alt="Tech Banner" 
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
          </div>
          
          <!-- Android Chrome Hero Image (removed from here as it's now used as avatar) -->
          <div class="w-full px-6 sm:px-8 -mt-6 relative z-10">
            <!-- Removed the duplicated image that was here -->
          </div>
          
          <!-- Profile Section -->
          <div class="relative px-6 sm:px-8 pb-8">
            <div class="flex flex-col sm:flex-row sm:items-end -mt-16 sm:-mt-20 mb-6 sm:mb-8 relative z-10">
              <a href="https://github.com/loftwah" target="_blank">
                <img 
                  src="/images/loftwah_400x400.jpg" 
                  alt="Dean 'Loftwah' Lofts" 
                  class="hidden w-32 h-32 sm:w-36 sm:h-36 rounded-full border-4 border-white dark:border-gray-800 shadow-lg object-cover hover:border-accent transition-colors" 
                />
                <!-- Using the original image from the old template instead of the avatar -->
                <img 
                  src="/android-chrome-512x512.png" 
                  alt="Dean 'Loftwah' Lofts" 
                  class="w-32 h-32 sm:w-36 sm:h-36 rounded-full border-4 border-white dark:border-gray-800 shadow-lg object-cover hover:border-accent transition-colors" 
                />
              </a>
              <div class="mt-4 sm:mt-0 sm:ml-6">
                <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white">Dean "<span class="text-accent">Loft</span>wah" Lofts</h1>
                <p class="text-lg text-gray-600 dark:text-gray-300">Senior DevOps Engineer & Tech Enthusiast</p>
              </div>
            </div>

            <!-- Bio Section -->
            <div class="prose prose-lg max-w-none dark:prose-invert mb-8">
              <p class="text-gray-700 dark:text-gray-300">
                Only the vibe coder remains. I'm a <span class="text-accent font-medium">Senior DevOps Engineer</span> specializing in AWS, Docker, Ruby, and Golang. I'm passionate about building efficient, scalable cloud infrastructures and creating impactful solutions that drive innovation.
              </p>
            </div>

            <!-- Skills Badge Section -->
            <div class="mb-8">
              <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-white border-l-4 border-accent pl-3 py-1">Tech Stack</h2>
              <div class="flex flex-wrap gap-2">
                <a href="https://www.credly.com/badges/c97a35fc-ba6b-427a-b521-19b9ab28cfdb/facebook" target="_blank" class="px-3 py-1 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-100 text-sm font-medium hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors">AWS</a>
                <a href="https://blog.deanlofts.xyz/guides/managing-terraform-ecs/" target="_blank" class="px-3 py-1 rounded-full bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-100 text-sm font-medium hover:bg-indigo-200 dark:hover:bg-indigo-800 transition-colors">DevOps</a>
                <a href="https://blog.deanlofts.xyz/guides/uv-python-docker/" target="_blank" class="px-3 py-1 rounded-full bg-cyan-100 dark:bg-cyan-900 text-cyan-800 dark:text-cyan-100 text-sm font-medium hover:bg-cyan-200 dark:hover:bg-cyan-800 transition-colors">Docker</a>
                <a href="https://www.credly.com/badges/0e437888-1deb-4a2d-8b82-cefb6b87b35d/public_url" target="_blank" class="px-3 py-1 rounded-full bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-100 text-sm font-medium hover:bg-green-200 dark:hover:bg-green-800 transition-colors">Terraform</a>
                <a href="https://linuxforpirates.deanlofts.xyz/ruby-on-whales/" target="_blank" class="px-3 py-1 rounded-full bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-100 text-sm font-medium hover:bg-red-200 dark:hover:bg-red-800 transition-colors">Ruby on Rails</a>
                <a href="https://blog.deanlofts.xyz/guides/astro-cloudflare/" target="_blank" class="px-3 py-1 rounded-full bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-100 text-sm font-medium hover:bg-purple-200 dark:hover:bg-purple-800 transition-colors">Astro</a>
                <a href="https://blog.deanlofts.xyz/guides/uv-fastapi-ecs/" target="_blank" class="px-3 py-1 rounded-full bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-100 text-sm font-medium hover:bg-yellow-200 dark:hover:bg-yellow-800 transition-colors">Python</a>
                <a href="https://blog.deanlofts.xyz/guides/typescript-exercises/" target="_blank" class="px-3 py-1 rounded-full bg-emerald-100 dark:bg-emerald-900 text-emerald-800 dark:text-emerald-100 text-sm font-medium hover:bg-emerald-200 dark:hover:bg-emerald-800 transition-colors">TypeScript</a>
                <a href="https://blog.deanlofts.xyz/blog/rag-product-catalog/" target="_blank" class="px-3 py-1 rounded-full bg-pink-100 dark:bg-pink-900 text-pink-800 dark:text-pink-100 text-sm font-medium hover:bg-pink-200 dark:hover:bg-pink-800 transition-colors">AI/ML</a>
                <a href="https://loftwah.github.io/linux-for-pirates/" target="_blank" class="px-3 py-1 rounded-full bg-orange-100 dark:bg-orange-900 text-orange-800 dark:text-orange-100 text-sm font-medium hover:bg-orange-200 dark:hover:bg-orange-800 transition-colors">Linux</a>
                <a href="https://github.com/loftwah" target="_blank" class="px-3 py-1 rounded-full bg-teal-100 dark:bg-teal-900 text-teal-800 dark:text-teal-100 text-sm font-medium hover:bg-teal-200 dark:hover:bg-teal-800 transition-colors">Postgres</a>
              </div>
            </div>
          </div>
        </div>

        <!-- About Me Section -->
        <div class="mt-8 bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 sm:p-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white border-l-4 border-accent pl-3 py-1">About Me</h2>
          
          <div class="prose prose-lg max-w-none dark:prose-invert space-y-4">
            <p class="text-gray-700 dark:text-gray-300">
              My journey in tech has been fueled by curiosity and a drive to push boundaries. I've tackled projects like migrating legacy Rails applications to modern AWS infrastructure, transforming projects that once took years into processes I can deploy in days. This journey has honed my skills across DevOps practices, cloud architecture, and software development.
            </p>
            
            <p class="text-gray-700 dark:text-gray-300">
              I'm also the creator of <a href="https://linkarooie.com/" target="_blank" class="text-accent font-bold hover:underline">Linkarooie</a>, a lightweight, single-user alternative to Linktree built with Astro, and <a href="https://techdeck.life" target="_blank" class="text-accent font-bold hover:underline">TechDeck</a>, AI-powered collectible trading cards for Tech Twitter/X profiles.
            </p>
            
            <p class="text-gray-700 dark:text-gray-300">
              When I'm not immersed in tech, you'll find me producing music as <a href="https://www.youtube.com/playlist?list=PLKBAUoCO_FtlACntcZqTOD4hckJ8IAWZ3" target="_blank" class="text-accent font-bold hover:underline">Loftwah The Beatsmiff</a>, collaborating with artists like Grind Mode Cypher and OptiMystic MC. Music is my creative outlet, allowing me to blend technical expertise with artistic expression.
            </p>
          </div>
        </div>

        <!-- Projects Section -->
        <div class="mt-8 bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 sm:p-8">
          <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white border-l-4 border-accent pl-3 py-1">Featured Projects</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Project Card: Linkarooie -->
            <div class="bg-gray-50 dark:bg-gray-700 rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-shadow">
              <div class="p-5">
                <div class="flex items-center mb-3">
                  <span class="text-accent text-2xl mr-2"><FontAwesomeIcon icon={faLink} className="w-6 h-6" /></span>
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white">Linkarooie</h3>
                </div>
                <p class="text-gray-600 dark:text-gray-300 mb-4">A minimal, single-user Astro alternative to Linktree for sharing all your important links.</p>
                <a href="https://linkarooie.com/" target="_blank" class="inline-flex items-center text-accent hover:text-accent-dark font-medium">
                  View Project <span class="ml-1">→</span>
                </a>
              </div>
            </div>
            
            <!-- Project Card: TechDeck -->
            <div class="bg-gray-50 dark:bg-gray-700 rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-shadow">
              <div class="p-5">
                <div class="flex items-center mb-3">
                  <span class="text-accent text-2xl mr-2"><FontAwesomeIcon icon={faIdCard} className="w-6 h-6" /></span>
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white">TechDeck</h3>
                </div>
                <p class="text-gray-600 dark:text-gray-300 mb-4">AI-powered collectible trading cards for Tech Twitter/X profiles. Part discovery engine, part vibe board, part trading card game.</p>
                <a href="https://techdeck.life" target="_blank" class="inline-flex items-center text-accent hover:text-accent-dark font-medium">
                  View Project <span class="ml-1">→</span>
                </a>
              </div>
            </div>
            
            <!-- Project Card: Linux for Pirates -->
            <div class="bg-gray-50 dark:bg-gray-700 rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-shadow">
              <div class="p-5">
                <div class="flex items-center mb-3">
                  <span class="text-accent text-2xl mr-2"><FontAwesomeIcon icon={faTerminal} className="w-6 h-6" /></span>
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white">Linux for Pirates!</h3>
                </div>
                <p class="text-gray-600 dark:text-gray-300 mb-4">A fun and comprehensive guide to learning Linux and Ruby on Rails with Docker.</p>
                <a href="https://linuxforpirates.deanlofts.xyz" target="_blank" class="inline-flex items-center text-accent hover:text-accent-dark font-medium">
                  View Project <span class="ml-1">→</span>
                </a>
              </div>
            </div>
            
            <!-- Project Card: Bogan Hustler -->
            <div class="bg-gray-50 dark:bg-gray-700 rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-shadow">
              <div class="p-5">
                <div class="flex items-center mb-3">
                  <span class="text-accent text-2xl mr-2"><FontAwesomeIcon icon={faPeopleRobbery} className="w-6 h-6" /></span>
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white">Bogan Hustler</h3>
                </div>
                <p class="text-gray-600 dark:text-gray-300 mb-4">A remake of Dope Wars but with an Australian twist.</p>
                <a href="https://boganhustler.deanlofts.xyz" target="_blank" class="inline-flex items-center text-accent hover:text-accent-dark font-medium">
                  View Project <span class="ml-1">→</span>
                </a>
              </div>
            </div>
          </div>
          

        </div>

        <!-- Achievements Section -->
        <div class="mt-8 bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 sm:p-8">
          <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white border-l-4 border-accent pl-3 py-1">Achievements</h2>
          
          <div class="space-y-6">
            <!-- Achievement Item: Mashable -->
            <div class="flex items-start">
              <div class="flex-shrink-0 h-12 w-12 rounded-full bg-accent/20 flex items-center justify-center text-accent">
                <FontAwesomeIcon icon={faLock} className="w-6 h-6" />
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white"><a href="https://mashable.com/article/crowdstrike-outage-reactions" target="_blank" class="hover:text-accent transition-colors">Featured in Mashable</a></h3>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">19 Jul 2024</p>
                <p class="text-gray-600 dark:text-gray-300">X users react to the CrowdStrike outage with glee and disappointment.</p>
                <a href="https://mashable.com/article/crowdstrike-outage-reactions" target="_blank" class="mt-2 inline-flex items-center text-accent hover:text-accent-dark text-sm font-medium">
                  Read Article <span class="ml-1">→</span>
                </a>
              </div>
            </div>
            
            <!-- Achievement Item: Terraform -->
            <div class="flex items-start">
              <div class="flex-shrink-0 h-12 w-12 rounded-full bg-accent/20 flex items-center justify-center text-accent">
                <FontAwesomeIcon icon={faCloud} className="w-6 h-6" />
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white"><a href="https://www.credly.com/badges/0e437888-1deb-4a2d-8b82-cefb6b87b35d/public_url" target="_blank" class="hover:text-accent transition-colors">HashiCorp Certified: Terraform Associate (003)</a></h3>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">18 Apr 2024</p>
                <p class="text-gray-600 dark:text-gray-300">Certified in Terraform with knowledge of core concepts, skills, and enterprise use cases.</p>
                <a href="https://www.credly.com/badges/0e437888-1deb-4a2d-8b82-cefb6b87b35d/public_url" target="_blank" class="mt-2 inline-flex items-center text-accent hover:text-accent-dark text-sm font-medium">
                  View Certification <span class="ml-1">→</span>
                </a>
              </div>
            </div>
            
            <!-- Achievement Item: AWS Certification -->
            <div class="flex items-start">
              <div class="flex-shrink-0 h-12 w-12 rounded-full bg-accent/20 flex items-center justify-center text-accent">
                <FontAwesomeIcon icon={faAws} className="w-6 h-6" />
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white"><a href="https://www.credly.com/badges/c97a35fc-ba6b-427a-b521-19b9ab28cfdb/facebook" target="_blank" class="hover:text-accent transition-colors">AWS Certified Solutions Architect – Professional</a></h3>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">12 Jul 2023</p>
                <p class="text-gray-600 dark:text-gray-300">Expertise in designing technical strategies to accomplish specific business goals across multiple platforms and providers.</p>
                <a href="https://www.credly.com/badges/c97a35fc-ba6b-427a-b521-19b9ab28cfdb/facebook" target="_blank" class="mt-2 inline-flex items-center text-accent hover:text-accent-dark text-sm font-medium">
                  View Certification <span class="ml-1">→</span>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Quote Section -->
        <div class="mt-8 bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 sm:p-8">
          <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white border-l-4 border-accent pl-3 py-1">Words to Live By</h2>
          
          <div class="space-y-6">
            <blockquote class="relative p-4 bg-gray-50 dark:bg-gray-700 rounded-xl">
              <div class="absolute top-0 left-0 transform -translate-y-1/2 translate-x-4 text-4xl text-accent opacity-50">"</div>
              <p class="text-gray-700 dark:text-gray-300 italic z-10 relative pl-4">Any sufficiently advanced technology is indistinguishable from magic.</p>
              <footer class="mt-2 text-right text-gray-600 dark:text-gray-400 font-medium">— <a href="https://en.wikipedia.org/wiki/Arthur_C._Clarke" target="_blank" class="hover:text-accent transition-colors">Arthur C. Clarke</a></footer>
            </blockquote>
            
            <blockquote class="relative p-4 bg-gray-50 dark:bg-gray-700 rounded-xl">
              <div class="absolute top-0 left-0 transform -translate-y-1/2 translate-x-4 text-4xl text-accent opacity-50">"</div>
              <p class="text-gray-700 dark:text-gray-300 italic z-10 relative pl-4">Be curious. Read widely. Try new things. What people call intelligence just boils down to curiosity.</p>
              <footer class="mt-2 text-right text-gray-600 dark:text-gray-400 font-medium">— <a href="https://en.wikipedia.org/wiki/Aaron_Swartz" target="_blank" class="hover:text-accent transition-colors">Aaron Swartz</a></footer>
            </blockquote>
            
            <blockquote class="relative p-4 bg-gray-50 dark:bg-gray-700 rounded-xl">
              <div class="absolute top-0 left-0 transform -translate-y-1/2 translate-x-4 text-4xl text-accent opacity-50">"</div>
              <p class="text-gray-700 dark:text-gray-300 italic z-10 relative pl-4">I always felt that I had to work harder than the next guy, just to do as well as the next guy. And to do better than the next guy, I had to just kill.</p>
              <footer class="mt-2 text-right text-gray-600 dark:text-gray-400 font-medium">— <a href="https://en.wikipedia.org/wiki/Jimmy_Iovine" target="_blank" class="hover:text-accent transition-colors">Jimmy Iovine</a></footer>
            </blockquote>
          </div>
        </div>

        <!-- Connect Section -->
        <div class="mt-8 bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 sm:p-8">
          <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white border-l-4 border-accent pl-3 py-1">Let's Connect</h2>
          
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
            <a href="https://github.com/loftwah" target="_blank" class="flex flex-col items-center justify-center p-4 bg-gray-50 dark:bg-gray-700 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
              <FontAwesomeIcon icon={faGithub} className="w-8 h-8 mb-2 text-accent" />
              <span class="text-gray-900 dark:text-white font-medium">GitHub</span>
            </a>
            
            <a href="https://twitter.com/loftwah" target="_blank" class="flex flex-col items-center justify-center p-4 bg-gray-50 dark:bg-gray-700 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
              <FontAwesomeIcon icon={faXTwitter} className="w-8 h-8 mb-2 text-accent" />
              <span class="text-gray-900 dark:text-white font-medium">Twitter/X</span>
            </a>
            
            <a href="https://bsky.app/profile/loftwah.com" target="_blank" class="flex flex-col items-center justify-center p-4 bg-gray-50 dark:bg-gray-700 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
              <FontAwesomeIcon icon={faCloud} className="w-8 h-8 mb-2 text-accent" />
              <span class="text-gray-900 dark:text-white font-medium">Bluesky</span>
            </a>
            
            <a href="https://linkedin.com/in/deanlofts" target="_blank" class="flex flex-col items-center justify-center p-4 bg-gray-50 dark:bg-gray-700 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
              <FontAwesomeIcon icon={faLinkedin} className="w-8 h-8 mb-2 text-accent" />
              <span class="text-gray-900 dark:text-white font-medium">LinkedIn</span>
            </a>
          </div>
          
          <div class="mt-6 text-center">
            <p class="text-gray-600 dark:text-gray-300">For professional opportunities, connect with me on social media.</p>
          </div>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
---
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="sticky top-0 z-40 w-full bg-white/95 dark:bg-gray-900/95 shadow-md backdrop-blur transition-all duration-300">
  <nav class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
    <h2 class="m-0 text-xl font-bold">
      <a href="/" class="flex items-center gap-3 transition-colors duration-300">
        <div class="w-8 h-8 rounded-full border border-accent overflow-hidden flex-shrink-0">
          <img 
            src="/images/loftwah_400x400.jpg" 
            alt="Loftwah Avatar" 
            class="w-full h-full object-cover"
          />
        </div>
        <div class="flex items-center">
          <span class="text-gray-900 dark:text-white font-bold">Loft</span>
          <span class="text-accent font-bold">wah</span>
        </div>
      </a>
    </h2>
    
    <div class="flex items-center gap-6">
      <div class="hidden sm:flex items-center gap-6">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/guides">Guides</HeaderLink>
        <HeaderLink href="/roadmap">Roadmap</HeaderLink>
        <HeaderLink href="/htmx_top_ceos">Top htmx CEOs</HeaderLink>
      </div>

      <ThemeToggle />

      <button 
        id="menu-toggle"
        class="sm:hidden p-2 text-gray-500 hover:text-accent dark:text-gray-400 dark:hover:text-accent focus:outline-none transition-colors duration-300"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="sm:hidden hidden px-4 py-2 bg-white dark:bg-gray-900 shadow-lg border-t border-gray-100 dark:border-gray-800">
    <div class="flex flex-col space-y-3 py-2">
      <HeaderLink href="/" class="block py-2">Home</HeaderLink>
      <HeaderLink href="/blog" class="block py-2">Blog</HeaderLink>
      <HeaderLink href="/guides" class="block py-2">Guides</HeaderLink>
      <HeaderLink href="/roadmap" class="block py-2">Roadmap</HeaderLink>
      <HeaderLink href="/htmx_top_ceos" class="block py-2">Top htmx CEOs</HeaderLink>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const handleMenuClick = () => {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu?.classList.toggle('hidden');
  };

  // Add event listener for mobile menu
  document.getElementById('menu-toggle')?.addEventListener('click', handleMenuClick);
</script>
---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <div class="nav-links">
      <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/guides">Guides</HeaderLink>
        <HeaderLink href="/quiz">Quiz</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1.2em;
  }
  h2 a {
    text-decoration: none;
    color: var(--black);
    font-weight: bold;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }
  .nav-links {
    display: flex;
    align-items: center;
    gap: 1.5em;
  }
  .internal-links {
    display: flex;
    gap: 1.2em;
  }
  .internal-links a {
    padding: 0.5em 0;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  .internal-links a.active {
    border-bottom-color: var(--accent);
  }
  .social-links {
    display: flex;
    gap: 0.8em;
    align-items: center;
  }
  .social-links a {
    text-decoration: none;
    color: var(--black);
    display: flex;
    align-items: center;
  }
  .social-icon {
    width: 24px;
    height: 24px;
    margin-right: 0.3em;
  }
  .mobile-menu-toggle {
    display: none;
  }

  @media (max-width: 720px) {
    .mobile-menu-toggle {
      display: flex;
      flex-direction: column;
      gap: 4px;
      background: none;
      border: none;
      padding: 0.5em;
      cursor: pointer;
      z-index: 20;
    }
    .mobile-menu-toggle span {
      display: block;
      width: 24px;
      height: 2px;
      background-color: #000;
      transition: 0.3s;
    }
    .nav-links {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: white;
      padding: 1em;
      flex-direction: column;
      align-items: flex-start;
      box-shadow: 0 2px 8px rgba(var(--black), 5%);
      z-index: 10;
    }
    .nav-links.active {
      display: flex;
    }
    .internal-links {
      display: flex;
      flex-direction: column;
      width: 100%;
    }
    .internal-links a {
      padding: 0.5em;
      width: 100%;
    }
    .social-links {
      display: flex;
      width: 100%;
      justify-content: center;
      padding-top: 0.5em;
      border-top: 1px solid #eee;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.querySelector('.mobile-menu-toggle');
    const navLinks = document.querySelector('.nav-links');
    
    menuToggle?.addEventListener('click', () => {
      navLinks?.classList.toggle('active');
      if (menuToggle.getAttribute('aria-expanded') === 'false') {
        menuToggle.setAttribute('aria-expanded', 'true');
      } else {
        menuToggle.setAttribute('aria-expanded', 'false');
      }
    });
  });
</script>

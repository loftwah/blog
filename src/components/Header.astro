---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <div class="nav-links">
      <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/guides">Guides</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
      <div class="social-links">
        <a href="https://twitter.com/loftwah" target="_blank">
          <span class="sr-only">Follow Loftwah on Twitter</span>
          <svg viewBox="0 0 16 16" aria-hidden="true" class="social-icon">
            <path fill="currentColor" d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/>
          </svg>
        </a>
        <a href="https://github.com/loftwah" target="_blank">
          <span class="sr-only">Check out Loftwah's GitHub</span>
          <svg viewBox="0 0 16 16" aria-hidden="true" class="social-icon">
            <path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
          </svg>
        </a>	  
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1.2em;
  }
  h2 a {
    text-decoration: none;
    color: var(--black);
    font-weight: bold;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }
  .nav-links {
    display: flex;
    align-items: center;
    gap: 1.5em;
  }
  .internal-links {
    display: flex;
    gap: 1.2em;
  }
  .internal-links a {
    padding: 0.5em 0;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  .internal-links a.active {
    border-bottom-color: var(--accent);
  }
  .social-links {
    display: flex;
    gap: 0.8em;
    align-items: center;
  }
  .social-links a {
    text-decoration: none;
    color: var(--black);
    display: flex;
    align-items: center;
  }
  .social-icon {
    width: 24px;
    height: 24px;
    margin-right: 0.3em;
  }
  .mobile-menu-toggle {
    display: none;
  }

  @media (max-width: 720px) {
    .mobile-menu-toggle {
      display: flex;
      flex-direction: column;
      gap: 4px;
      background: none;
      border: none;
      padding: 0.5em;
      cursor: pointer;
      z-index: 20;
    }
    .mobile-menu-toggle span {
      display: block;
      width: 24px;
      height: 2px;
      background-color: #000;
      transition: 0.3s;
    }
    .nav-links {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: white;
      padding: 1em;
      flex-direction: column;
      align-items: flex-start;
      box-shadow: 0 2px 8px rgba(var(--black), 5%);
      z-index: 10;
    }
    .nav-links.active {
      display: flex;
    }
    .internal-links {
      display: flex;
      flex-direction: column;
      width: 100%;
    }
    .internal-links a {
      padding: 0.5em;
      width: 100%;
    }
    .social-links {
      display: flex;
      width: 100%;
      justify-content: center;
      padding-top: 0.5em;
      border-top: 1px solid #eee;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.querySelector('.mobile-menu-toggle');
    const navLinks = document.querySelector('.nav-links');
    
    menuToggle?.addEventListener('click', () => {
      navLinks?.classList.toggle('active');
      if (menuToggle.getAttribute('aria-expanded') === 'false') {
        menuToggle.setAttribute('aria-expanded', 'true');
      } else {
        menuToggle.setAttribute('aria-expanded', 'false');
      }
    });
  });
</script>
